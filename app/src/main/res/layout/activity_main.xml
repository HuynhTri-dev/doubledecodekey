<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Double Decode Key"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Step 1: Input -->
        <LinearLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Input Code"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:hint="Enter Base64URL string"
                android:textColorHint="#88FFFFFF"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <!-- Step 2: Instruction -->
        <LinearLayout
            android:id="@+id/layoutInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            tools:visibility="visible">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Instruction (Intermediate)"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:fontFamily="sans-serif"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textIsSelectable="true"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Step 3: Cipher Text -->
        <LinearLayout
            android:id="@+id/layoutCipher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            tools:visibility="visible">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Cipher Text"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCipherText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:textColor="#FFFFFF"
                android:textIsSelectable="true"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Step 4: Final Key -->
        <LinearLayout
            android:id="@+id/layoutFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            tools:visibility="visible">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Final Key"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFinalKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/key_background"
                android:fontFamily="monospace"
                android:padding="16dp"
                android:gravity="center"
                android:textColor="#4CAF50"
                android:textIsSelectable="true"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Error Display -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#CF6679"
            android:visibility="gone"
            tools:text="Error message" />

        <!-- Action Button -->
        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2196F3"
            android:text="Start Decoding"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>